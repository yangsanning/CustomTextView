<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="LabelEllipsisTextView">
        <attr name="letv_padding_top" format="dimension" />
        <attr name="letv_padding_bottom" format="dimension" />

        <attr name="letv_text" format="string" />
        <attr name="letv_text_color" format="color" />
        <attr name="letv_text_size" format="dimension" />

        <attr name="letv_start_tag" format="string" />
        <attr name="letv_end_tag" format="string" />

        <attr name="letv_ellipsis" format="string" />
    </declare-styleable>

    <declare-styleable name="MagicalTextView">
        <attr name="mtv_padding_left" format="dimension" />
        <attr name="mtv_padding_top" format="dimension" />
        <attr name="mtv_padding_right" format="dimension" />
        <attr name="mtv_padding_bottom" format="dimension" />

        <attr name="mtv_bold_text_color" format="color" />
        <attr name="mtv_bold_text_size" format="dimension" />
        <attr name="mtv_bold_end_index" format="integer" />

        <attr name="mtv_default_text" format="string" />
        <attr name="mtv_default_text_color" format="color" />
        <attr name="mtv_default_text_size" format="dimension" />

        <attr name="mtv_details_text" format="string" />
        <attr name="mtv_details_text_color" format="color" />
        <attr name="mtv_details_text_size" format="dimension" />
        <attr name="mtv_details_margin_left" format="dimension" />

        <attr name="mtv_details_image" format="reference" />
        <attr name="mtv_details_image_width" format="dimension" />
        <attr name="mtv_details_image_height" format="dimension" />
        <attr name="mtv_details_image_margin_left" format="dimension" />

        <attr name="mtv_row_width" format="dimension" />
        <attr name="mtv_max_line" format="integer" />
        <attr name="mtv_force_max_height" format="boolean" />
    </declare-styleable>

    <declare-styleable name="RCTextView">
        <attr name="rctv_round_corner" format="dimension" />
        <attr name="rctv_round_corner_top_left" format="dimension" />
        <attr name="rctv_round_corner_top_right" format="dimension" />
        <attr name="rctv_round_corner_bottom_left" format="dimension" />
        <attr name="rctv_round_corner_bottom_right" format="dimension" />

        <attr name="rctv_stroke_dotted_width" format="dimension" />
        <attr name="rctv_stroke_dotted_space" format="dimension" />
        <attr name="rctv_stroke_width_normal" format="dimension" />
        <attr name="rctv_stroke_width_pressed" format="dimension" />
        <attr name="rctv_stroke_width_unable" format="dimension" />
        <attr name="rctv_stroke_color_normal" format="color" />
        <attr name="rctv_stroke_color_pressed" format="color" />
        <attr name="rctv_stroke_color_unable" format="color" />

        <attr name="rctv_icon_normal" format="reference" />
        <attr name="rctv_icon_pressed" format="reference" />
        <attr name="rctv_icon_unable" format="reference" />
        <attr name="rctv_icon_height" format="dimension" />
        <attr name="rctv_icon_width" format="dimension" />
        <attr name="rctv_icon_direction">
            <enum name="left" value="1" />
            <enum name="top" value="2" />
            <enum name="right" value="3" />
            <enum name="bottom" value="4" />
        </attr>

        <attr name="rctv_text_color_normal" format="color" />
        <attr name="rctv_text_color_pressed" format="color" />
        <attr name="rctv_text_color_unable" format="color" />
        <attr name="rctv_text_typeface" format="string" />

        <attr name="rctv_bg_normal" format="color" />
        <attr name="rctv_bg_pressed" format="color" />
        <attr name="rctv_bg_unable" format="color" />
    </declare-styleable>
</resources>